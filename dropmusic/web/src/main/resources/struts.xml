<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>
    <constant name="struts.ui.theme" value="simple"/>

    <constant name="struts.action.excludePattern" value="/CallBackServlet" />

    <package name="dropmusic" extends="struts-default">

        <default-action-ref name="index"/>

        <action name="index">
            <result>/login.jsp</result>
        </action>

        <action name="RegisterAction" class="pt.onept.sd1819.dropmusic.web.action.RegisterAction">
            <result name="success">/login.jsp</result>
            <result name="error">/register.jsp</result>
        </action>

        <action name="LoginAction" class="pt.onept.sd1819.dropmusic.web.action.LoginAction">
            <result name="success">/dashboard.jsp</result>
            <result name="error">/login.jsp</result>
        </action>

        <action name="SearchAction" class="pt.onept.sd1819.dropmusic.web.action.SearchAction">
            <result name="success">/WEB-INF/searchResults.jsp</result>
            <result name="error">/WEB-INF/search.jsp</result>
            <result name="input">/WEB-INF/search.jsp</result>
            <result name="login">login.jsp</result>
        </action>

    </package>

</struts>